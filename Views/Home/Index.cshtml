@{
    ViewData["Title"] = "Home Page";
}
@* ViewBag.AllChefs *@
@using System;
@using System.Collections.Generic;
@{
    var today = DateTime.Today;
}
<div class="text-center">
    <h1 class="display-4">Chefs and Dishes</h1>
    <h3 class="mt-5 text-left">Check out our Chefs!</h1>
</div>
<div style="height: 30rem; overflow: auto;">

<div class="container mt-3 p-3">
    <table class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col"># of Dishes</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewBag.AllChefs)
    {
        <tr>
            <td>@item.Name</td>
            <td>@{var age = today.Year - item.DOB.Year;}@age</td>
            <td>@item.CreatedDishes.Count</td>
        </tr>
    }    
    </tbody>
</table>
</div>
</div>
